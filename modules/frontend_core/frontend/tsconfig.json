{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "es6",
    "lib": [
      "DOM",
      "ES2019"
    ],
    "jsx": "react",
    "target": "es5",
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ],
    "moduleResolution": "node", // required by Three.js
    // "baseUrl": ".",
    // "paths": {
    //   "@farm_ng": [
    //     "../../../build/ts/genproto"
    //   ]
    // }
  },
  "include": [
    "src",
    "test"
  ]
}
