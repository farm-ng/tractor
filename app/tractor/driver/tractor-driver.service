[Unit]
Description=Tractor low level driver service.
After=network.target
Wants=tractor-bringup

[Service]
ExecStart=/home/farmer/tractor/app/tractor/driver/main.sh
WorkingDirectory=/home/farmer/tractor
StandardOutput=inherit
StandardError=inherit
Restart=always
User=farmer

[Install]
WantedBy=multi-user.target